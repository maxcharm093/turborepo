{
  "name": "turborepo",
  "private": true,
  "scripts": {
    "commit": "cz",
    "build": "turbo build",
    "add:api": "pnpm add --filter=api",
    "dev:api": "pnpm dev --filter=api",
    "add:web": "pnpm add --filter=web",
    "dev:web": "pnpm dev --filter=web",
    "dev": "turbo dev",
    "dev:ipv4": "turbo dev:ipv4",
    "prod": "turbo prod",
    "prod:ipv4": "turbo prod:ipv4",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "husky",
    "clear:modules": "npx npkill",
    "changeset": "changeset"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css,yml}": [
      "pnpm lint",
      "pnpm format",
      "pnpm test"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^4.1.0",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
